@*
  Layout page using Bootstrap
*@
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - TaskTracker</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" asp-page="/Tasks/Index">TaskTracker</a>
      <div class="ms-auto">
        <a class="btn btn-outline-secondary btn-sm" asp-page="/Account/Login">Login</a>
        <a class="btn btn-primary btn-sm ms-2" asp-page="/Account/Register">Register</a>
      </div>
    </div>
  </nav>
  <main class="container py-4">
    @RenderBody()
  </main>
</body>
</html>
